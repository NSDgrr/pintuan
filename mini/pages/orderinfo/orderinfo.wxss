.wuliu_main .ul{
  padding:40rpx;
  height: 100%;
}
.wuliu_main .ul .li{
  margin-left:40rpx;
  border-bottom:1px solid #ccc;
  font-size:24rpx;
  position: relative;
  overflow:initial;
  padding:20rpx 0;
}
.wuliu_main .ul .li text:nth-child(1){
  position: absolute;
  width:20rpx;
  height:20rpx;
  background: #ccc;
  top: 45rpx;
  left:-40rpx;
  border-radius: 50%;
}
.wuliu_main .ul .li text:nth-child(2){
