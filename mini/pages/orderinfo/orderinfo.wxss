.wuliu{
  position: fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  z-index: 999;
}
.wuliu_main{
  width:80%;
  height:70%;
  overflow: hidden;
  position:absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 20rpx;
}
.wuliu_guan{
  position: absolute;
  bottom:5.5%;
  left:50%;
  transform: translateX(-50%);
  color: #fff;
}

