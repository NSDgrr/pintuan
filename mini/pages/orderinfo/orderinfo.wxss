.clear {
    zoom: 1;
}
.clear:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
    font-size: 0;
}
.fl {
    float: left;
}
.lists-header .now-type {
    font-size: 26rpx;
}
