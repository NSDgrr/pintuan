.in-block {
    display: inline-block;
}
.lists-footer {
    padding-top: 0.3rem;
    font-size: 26rpx;
}
.lists-footer .wait-pay {
    color: #ffffff;
}
.lists-footer .footer-btn {
    font-size:26rpx;
    line-height:45rpx;
    padding: 0 30rpx;
