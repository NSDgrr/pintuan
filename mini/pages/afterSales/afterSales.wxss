page{background: #fff;padding:0 30rpx;box-sizing: border-box;}
.head{
  font-size:28rpx;
  padding:20rpx 0;
  border-bottom: 1px solid #eee;
}
.head radio{margin-top:20rpx;margin-right:10rpx;}
.title{padding:20rpx 0;font-size:28rpx;}
textarea{width:100%;background: #fefefe;border: 1px solid #eee;border-radius: 10rpx;padding:20rpx;font-size:28rpx;box-sizing: border-box;}
.flie_up{
  display:flex;
  margin-top:20rpx;
  justify-content: space-between;
}
.flie_up view{
  width:32.5%;
  background: #eee;
  text-align: center;
  height:200rpx;
  line-height:200rpx;
  font-size:115rpx;
  color:#ccc;
}
.flie_up view image{
  width:100%;
  height: 100%;
}
.submit_btn{
  position: fixed;
  bottom:0;
  left:0;
  text-align: center;
  width:100%;
  padding:30rpx 0;
  font-size:28rpx;
  background: #b4282d;
  color: #fff;
}
