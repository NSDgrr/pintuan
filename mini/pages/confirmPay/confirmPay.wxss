/* pages/confirmPay/confirmPay.wxss */
.confirmPay-num{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}
.confirmPay-num .price{
  color: #b2282e;
}
.pay-speed{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #b2282e;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.pay-way{
  font-size: 28rpx;
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}

.pay-title{
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 20rpx;
}

.pay-way .way .radio-group view{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0 0;
}
.pay-way .way .radio-group .iconfont{
  color: #b2282e;
}