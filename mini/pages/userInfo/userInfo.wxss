/* pages/userInfo/userInfo.wxss */
.head{
    width:750rpx;
    display:flex;
    height:270rpx;
    background:#333;
    padding:0 40rpx;
}
.head-left{
    flex:0 0 70%;
    display:flex;
    margin-top:64rpx;
}
.head .tx{
    width:142rpx;
    height:142rpx;
    border-radius:50%;
}
.head-info{
    flex:1;
    padding-top:48rpx;
    margin-left:40rpx;
}
.head-info .lv{
    color:#fff;
    font-size:28rpx;
}

.userInfo-con{
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.userInfo-con view{
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  padding: 30rpx 0 20rpx;
  border-bottom: 1rpx solid #ccc; 
}
.userInfo-con view text{
  display: flex;
  width: 20%;
  align-items: center;
}
.userInfo-con view input{
  width: 90%;
  border: 1rpx solid #333;
  padding-left: 20rpx;
}
.userInfo-con .prompt{
  color: #b2282e;
  padding: 30rpx 0;
  font-size: 28rpx;
  display: block;
}

.userInfo-container button{
  margin: 150rpx 40rpx 0;
  border-radius: 25rpx;
  background: #b2282e;
  font-size: 28rpx;
  color: #fff;
}